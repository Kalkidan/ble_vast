<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.NoActionAndStatusBar" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <!--<item name="windowNoTitle">true</item>-->
       <!-- <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>-->
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryTeal</item>
       <!-- <item name="android:statusBarColor">@android:color/transparent</item>-->
    </style>
<!--This is for some special cases like the collapsing toolbar-->
    <style name="AppTheme.NoActionBarButStatusBar" parent="AppTheme.NoActionBar.StatusBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/design_default_color_primary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryTeal</item>
    </style>
</resources>
